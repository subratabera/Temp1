# Parameters
$input = "C:\Path\to\your\file.txt"
$outputBase = "C:\Path\to\out\file_part_"
$chunkSize = 1000000  # Number of characters per file (e.g., 1 million)
$content = Get-Content $input -Raw  # Reads the file as a single long string

for ($i = 0; $i -lt $content.Length; $i += $chunkSize) {
    $outfile = "${outputBase}$($i/$chunkSize + 1).txt"
    $length = [Math]::Min($chunkSize, $content.Length - $i)
    $chunk = $content.Substring($i, $length)
    Set-Content $outfile $chunk
}



Get-Content C:\Path\to\out\file_part_*.txt -Raw | Set-Content C:\Path\to\out\combined.txt
